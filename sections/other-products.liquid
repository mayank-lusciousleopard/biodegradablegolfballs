{% schema %}
  {
    "name": "Other Products",
    "settings": [],
    "blocks": [
      {
        "type": "product",
        "name": "Product",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Product Image"
          }, {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Wholesale event packages"
          }, {
            "type": "text",
            "id": "description",
            "label": "Description",
            "default": "Description"
          }, {
            "type": "text",
            "id": "highlight_message",
            "label": "Highlight Message",
            "default": "Highlight Message"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Other Products",
        "category": "Custom"
      }
    ]
  }
{% endschema %}

<div class='px-[16px] md:px-[80px] {{ class }}'>
  <div class='grid sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-[16px] w-fit mx-auto'>
    {% for block in section.blocks %}
      <div class='aspect-square relative rounded-[16px] flex items-center justify-center max-w-[350px]'>
        <img
          src='{{ block.settings.image | image_url: 'master' }}'
          alt='{{ block.settings.title }}'
          width='100%'
          height='100%'
          class='aspect-square rounded-[16px]'>
        <div class='absolute top-0 left-0 w-full h-full z-[1] flex flex-col gap-[16px] bg-[#C4C4C4] bg-opacity-20 rounded-[16px] p-[32px] justify-end'>
          <div class='flex flex-col gap-[8px]'>
            <p class='font-bold text-[24px] text-text-inverse'>{{ block.settings.title }}</p>
            {% if block.settings.description %}
              <p class='font-medium text-[18px] text-text-inverse'>{{ block.settings.description }}</p>
            {% endif %}
          </div>
          {% if block.settings.highlight_message %}
            <div class='px-[16px] py-[8px] bg-highlight-yellow rounded-[20px] w-fit'>
              <p class='text-text-primary font-bold text-[16px]'>
                {{ block.settings.highlight_message }}
              </p>
            </div>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% if section.blocks.size == 0 %}
  <p>No products added yet.</p>
{% endif %}