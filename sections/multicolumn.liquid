    "class": "section",
    "tag": "section",
    "disabled_on": {
        "groups": ["header", "footer"]
    },
    "settings": [
        {
            "type": "inline_richtext",
            "id": "title",
            "default": "Multicolumn",
            "label": "t:sections.multicolumn.settings.title.label"
        },
        {
            "type": "select",
            "id": "heading_size",
