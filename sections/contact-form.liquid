{%- comment -%}
  Renders IG posts with link to the Instagram
{%- endcomment -%}
<link rel='stylesheet' href='{{ 'section-contact-form.css' | asset_url }}'>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class='color-{{ section.settings.color_scheme }} gradient px-[16px] md:px-[80px] mb-[64px] md:mb-[128px]'>
  <div class='grid grid-cols-1 md:grid-cols-2 gap-[24px] md:gap-[64px]'>
    <div class='flex flex-col gap-[16px]'>
      <p class='text-text-primary font-bold text-[32px]'>{{ section.settings.contact_us_heading }}</p>
      <p class='text-text-primary font-medium text-[18px]'>
        {{ section.settings.contact_us_description }}
      </p>

      <div class='bg-surface-secondary p-[24px] md:p-[32px] flex flex-row gap-[24px] items-center rounded-[16px]'>
        {% render 'icon-basket' %}
        <div class='flex flex-col gap-[8px]'>
          <p class='text-text-primary font-bold text-[16px]'>{{ section.settings.general_heading }}</p>
          <p class='font-medium text-[14p] text-text-primary'>{{ section.settings.general_phone }}</p>
          <p class='font-medium text-[14p] text-text-primary'>{{ section.settings.general_email }}</p>
        </div>
      </div>
      <div class='bg-surface-secondary p-[24px] md:p-[32px] flex flex-row gap-[24px] items-center rounded-[16px]'>
        {% render 'icon-basket' %}
        <div class='flex flex-col gap-[8px]'>
          <p class='text-text-primary font-bold text-[16px]'>
            {{ section.settings.content_creator_heading }}
          </p>
          <p class='font-medium text-[14p] text-text-primary'>{{ section.settings.content_creator_email }}</p>
        </div>
      </div>
      <div class='bg-surface-secondary p-[24px] md:p-[32px] flex flex-row gap-[24px] items-center rounded-[16px]'>
        {% render 'icon-basket' %}
        <div class='flex flex-col gap-[8px]'>
          <p class='text-text-primary font-bold text-[16px]'>{{ section.settings.social_media_heading }}</p>
          <p class='font-medium text-[14p] text-text-primary'>{{ section.settings.social_media_email }}</p>
        </div>
      </div>
      <div class='bg-surface-secondary p-[24px] md:p-[32px] flex flex-row gap-[24px] items-center rounded-[16px]'>
        {% render 'icon-basket' %}
        <div class='flex flex-col gap-[8px]'>
          <p class='text-text-primary font-bold text-[16px]'>{{ section.settings.warehouse_heading }}</p>
          <p class='font-medium text-[14p] text-text-primary'>
            {{ section.settings.warehouse_address }}
          </p>
        </div>
      </div>
    </div>
    <div class='h-full w-full'>
      <iframe
        style='border: 0;'
        src='https://www.google.com/maps/embed{{ section.settings.map_embed_path }}'
        width='100%'
        height='100%'
        frameborder='0'
        allowfullscreen='allowfullscreen'
        class='rounded-[16px] min-h-[240px]'></iframe>
    </div>
  </div>
</div>

