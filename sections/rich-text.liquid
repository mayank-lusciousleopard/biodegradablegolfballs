{% schema %}
{
    "name": "Rich Text",
    "tag": "section",
    "settings": [
        {
            "type": "richtext",
            "id": "content",
            "label": "Content",
            "default": "<h2>Your Heading Here</h2><p>Your paragraph text here.</p>"
        },
        {
            "type": "number",
            "id": "margin_top",
            "label": "Margin Top (px)",
            "default": 20
        },
        {
            "type": "number",
            "id": "margin_bottom",
            "label": "Margin Bottom (px)",
            "default": 20
        },
        {
            "type": "number",
            "id": "margin_left",
            "label": "Margin Left (px)",
            "default": 0
        },
        {
            "type": "number",
            "id": "margin_right",
            "label": "Margin Right (px)",
            "default": 0
        },
        {
            "type": "number",
            "id": "text_size",
            "label": "Default Text Size (px)",
            "default": 12
        }
    ],
    "presets": [
        {
            "name": "Rich Text",
            "category": "Text"
        }
    ]
}
{% endschema %}

<style>
    /* Heading and Paragraph Styles for Rich Text Section */
    .rich-text-section h1 {
        font-size: 32px;
        font-weight: bold;
    }

    .rich-text-section h2 {
        font-size: 24px;
        font-weight: bold;
    }

    .rich-text-section h3 {
        font-size: 20px;
        font-weight: bold;
    }

    .rich-text-section h4 {
        font-size: 16px;
        font-weight: bold;
    }

    .rich-text-section h5 {
        font-size: 14px;
        font-weight: bold;
    }

    .rich-text-section h6 {
        font-size: 12px;
        font-weight: bold;
    }

    /* Set default paragraph text size to be editable */
    .rich-text-section p {
        font-size: {{ section.settings.text_size }}px;
    }

    /* Optional: Adjust list item font size */
    .rich-text-section li {
        font-size: {{ section.settings.text_size }}px;
    }

    /* Optional: Adjust other text elements */
    .rich-text-section span,
    .rich-text-section a {
        font-size: {{ section.settings.text_size }}px;
    }
</style>

<section
    class='rich-text-section px-[16px] md:px-[80px] mb-[100px] mt-[0px]'
    style='
        margin-top: {{ section.settings.margin_top }}px;
        margin-bottom: {{ section.settings.margin_bottom }}px;
        margin-left: {{ section.settings.margin_left }}px;
        margin-right: {{ section.settings.margin_right }}px;
    '
>
    <div class='container mx-auto'>
        <div class='prose max-w-none rich-text-section'>
            {{ section.settings.content }}
        </div>
    </div>
</section>
