    <script>
        const handleSwitchSection = (section, element) => {
            const descriptionTab = document.getElementById('tab-description');
            const reviewTab = document.getElementById('tab-review');
            const tabButtons = document.querySelectorAll('.tab-button');

            if (section === 'description') {
                descriptionTab.classList.remove('hidden');
                reviewTab.classList.add('hidden');
            } else if (section === 'reviews') {
                descriptionTab.classList.add('hidden');
                reviewTab.classList.remove('hidden');
            }

            // Update button styles
            tabButtons.forEach((button) => {
                if (button === element) {
                    button.classList.remove('bg-surface-secondary-active');
                    button.classList.add('bg-surface-primary-active', 'text-text-secondary-active');
                } else {
                    button.classList.remove('bg-surface-primary-active', 'text-text-secondary-active');
                    button.classList.add('bg-surface-secondary-active', 'text-text-primary-active');
                }
            });
        };

        document.addEventListener('DOMContentLoaded', function () {
            function isIE() {
                const ua = window.navigator.userAgent;
                const msie = ua.indexOf('MSIE ');
                const trident = ua.indexOf('Trident/');

                return msie > 0 || trident > 0;
            }

            if (!isIE()) return;
            const hiddenInput = document.querySelector('#{{ product_form_id }} input[name="id"]');
            const noScriptInputWrapper = document.createElement('div');
            const variantSwitcher =
                document.querySelector('variant-radios[data-section="{{ section.id }}"]') ||
                document.querySelector('variant-selects[data-section="{{ section.id }}"]');
            noScriptInputWrapper.innerHTML = document.querySelector(
                '.product-form__noscript-wrapper-{{ section.id }}'
            ).textContent;
            variantSwitcher.outerHTML = noScriptInputWrapper.outerHTML;

            document.querySelector('#Variants-{{ section.id }}').addEventListener('change', function (event) {
                hiddenInput.value = event.currentTarget.value;
            });
        });
    </script>

